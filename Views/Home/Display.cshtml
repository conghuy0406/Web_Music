@model Web_Music.Models.MusicViewModel1

<section class="oneMusic-buy-now-area has-fluid bg-gray section-padding-100">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="section-heading style-2">
                    <p>See what’s new</p>
                    <h2>Buy What’s New</h2>
                </div>
            </div>
        </div>

        <div class="row">

            <!-- Single Album Area -->
            @foreach (var baihat in Model.BaiHats)
            {
                <div class="col-12 col-sm-6 col-md-4 col-lg-2">
                    <div class="single-album-area wow fadeInUp" data-wow-delay="100ms">
                        <div class="album-thumb">
                            <img src="~/img/bg-img/@baihat.AnhBia" alt="">
                            <!-- Album Price -->
                            <div class="album-price">
                                <p>@baihat.ThoiLuong</p>
                            </div>
                            <!-- Play Icon -->
                            <div class="play-icon">
                                <!-- Truyền mã bài hát vào data-id -->
                                <a href="#PhatNhac" class="play-btn"
                                   data-id="@baihat.MaBaiHat"
                                   data-ten-bai-hat="@baihat.TenBaiHat"
                                   data-ca-si="@baihat.MaCaSiNavigation.TenCaSi"
                                   data-anh-bia="@baihat.AnhBia"
                                   data-audio="audio/@baihat.DuongDanFile"
                                   data-tieu-su="@baihat.MaCaSiNavigation.TieuSu">
                                    <span class="icon-play-button"></span>
                                </a>
                            </div>
                        </div>
                        <div class="album-info">
                            <a href="#PhatNhac" class="play-btn" data-id="@baihat.MaBaiHat"
                               data-ten-bai-hat="@baihat.TenBaiHat"
                               data-ca-si="@baihat.MaCaSiNavigation.TenCaSi"
                               data-anh-bia="@baihat.AnhBia"
                               data-audio="audio/@baihat.DuongDanFile"
                               data-tieu-su="@baihat.MaCaSiNavigation.TieuSu">

                                <h5>@baihat.TenBaiHat</h5>
                            </a>
                            <p>@baihat.MaCaSiNavigation.TenCaSi</p>
                            <p>@baihat.MaCaSiNavigation.TieuSu</p>
                        </div>
                    </div>
                </div>
            }
        </div>

        <div class="row">
            <div class="col-12">
                <div class="load-more-btn text-center wow fadeInUp" data-wow-delay="300ms">
                    <a href="#" class="btn oneMusic-btn">Load More <i class="fa fa-angle-double-right"></i></a>
                </div>
            </div>
        </div>
    </div>
</section>

<section class="featured-artist-area section-padding-100 bg-img bg-overlay bg-fixed" id="PhatNhac" style="background-image: url(img/bg-img/bg-4.jpg);">
    <div class="container">
        <div class="row align-items-end">
            <div class="col-12 col-md-5 col-lg-4">
                <div class="featured-artist-thumb">
                    <!-- Ảnh bìa sẽ được cập nhật khi người dùng nhấn vào bài hát -->
                    <img src="~/img/bg-img/fa.jpg" alt="" id="album-cover" class="album-image">
                </div>
            </div>
            <div class="col-12 col-md-7 col-lg-8">
                <div class="featured-artist-content">
                    <div class="section-heading white text-left mb-30">
                        <h2 class="singer-name">Buy What’s New</h2>
                        <p class="singer-name"></p>
                    </div>
                    <p class="singer-Tieusu">Nam tristique ex vel magna tincidunt, ut porta nisl finibus...</p>
                    <div class="song-play-area">
                        <div class="song-name">
                            <p id="song-name">01. Main Hit Song</p>
                        </div>
                        <audio preload="auto" controls id="audio-player">
                            <source src="/audio/dummy-audio.mp3" id="audio-source">
                        </audio>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

