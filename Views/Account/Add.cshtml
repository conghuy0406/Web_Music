@model Web_Music.Models.NguoiDung 
@using Microsoft.AspNetCore.Mvc.Rendering 
@{ 
    ViewData["Title"] = "Add Product"; 
} 
  
<h2>Add Product</h2> 
  
<form asp-action="Add" method="post" enctype="multipart/form-data"> 

    <div class="form-group"> 
        <label asp-for="TenDangNhap"></label>
        <input asp-for="TenDangNhap" class="form-control" />
        <span asp-validation-for="TenDangNhap" class="text-danger"></span>
    </div> 
    <div class="form-group">
        <label asp-for="MatKhau"></label>
        <textarea asp-for="MatKhau" class="form-control"></textarea>
        <span asp-validation-for="MatKhau" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Email"></label>
        <textarea asp-for="Email" class="form-control"></textarea>
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="VaiTro">VaiTro</label>
        <textarea asp-for="VaiTro" class="form-control"></textarea>
        <span asp-validation-for="VaiTro" class="text-danger"></span>
    </div>
  
    <button type="submit" class="btn btn-primary">Add</button>
</form>